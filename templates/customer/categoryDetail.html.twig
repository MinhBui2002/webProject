{% extends "customerBase.html.twig" %}


{% block link %}
    <link rel="stylesheet" href="{{asset('css/landingPage.css')}}">  
    <link rel="stylesheet" href="{{asset('css/grid.css')}}">  
{% endblock %}
{% block body %}
  
   <div class="grid wide">
          
         
         
               <div class="row">
                     {% for product in category.Product %}
                <div class="col col-2"> 
                     <div class="category_card">
                      <img class="product__img" src="{{ asset('images/cover.png') }}" width="100" height="120"> 
                  
                  <a  class="btn btn-info" href="{{ path('landing_page_view_product', {'id' : product.id }) }}">
                      
                      {{ product.ProductName }}
                  </a>
                     </div>
                       
                  </div>    
                     {% endfor %}
               </div>
          
    
   </div>
{% endblock %}