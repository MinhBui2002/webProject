{% extends "base.html.twig" %}

{% block body %}
   <div class="container">
      <table class="table text-center">
         <thead>
            <tr>
               <th>Order ID</th>
               <th>Order date</th>
               <th>User</th>
               <th>Price</th>
               <th>Product</th>
            </tr>
         </thead>
         <tbody>
               <tr>
                  <td>{{ order.id }} </td>
                  <td>{{ order.OrderDate | date('d/m/Y')}} </td>
                  <td>{{order.User.UserDetail.UserName}}</td>
                  <td>{{order.OrderDetail.DetailTotal}}</td>
                  <td>
                  <ul>
                  <li>{%for product in order.OrderDetail.Product %}<a href="{{path('view_product', {'id':product.id})}}">
                   {{product.ProductName}}</a><br>
                   {% endfor %}</li>
                  </ul> 
                  </td>
                    
                  <td>
                     <a class="btn btn-warning" href="{{ path('edit_order', {'id' : order.id }) }}">
                        EDIT
                     </a>
                     <a class="btn btn-danger" href="{{ path('delete_order_by_id', {'id' : order.id }) }}">
                        DELETE
                     </a>
                  </td>
               </tr>
         </tbody> 
      </table>
   </div>
{% endblock %}